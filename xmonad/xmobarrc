Config { font = "xtf:Anonymice Powerline:size=9:regular:antialias=true"
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW C 100
       , lowerOnStart = False
       , overrideRedirect = False
       , commands = [ Run StdinReader
                    , Run Cpu 
                        [ "-a", "l", "-w", "2"
                        , "-L","25","-H","50"
